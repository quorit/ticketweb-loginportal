#!/bin/bash

#default values
devel_mode=0
venv_id=unset
ticketweb_venv_root=unset


usage()
{
  echo "Usage 1: ticketweb-loginportal-server --devel-mode <ticketweb_venv_root>"
  echo "Usage 2: ticketweb-loginportal-server <ticketweb_venv_root>"
  exit 2
}


PARSED_ARGUMENTS=$(getopt --name ticketweb-loginportal-server -o d --long devel-mode -- "$@")

VALID_ARGUMENTS=$?
if [ "$VALID_ARGUMENTS" != "0" ]; then
  usage
fi


eval set -- "$PARSED_ARGUMENTS"
while :
do
  case "$1" in
    --devel-mode)   devel_mode=1      ; shift   ;;
    # -- means the end of the arguments; drop this, and break out of the while loop
    --) shift; break ;;
    # If invalid options were passed, then getopt should have reported an error,
    # which we checked as VALID_ARGUMENTS when getopt was called...
    *) echo "Unexpected option: $1 - this should not happen."
       usage ;;
  esac
done


if [[ -z $1 ]]; then
    usage
fi

ticketweb_venv_root=$1

venv_id=$(systemd-escape --path "$ticketweb_venv_root")


gunicorn_bind=$(cat $ticketweb_venv_root/etc/ticketweb/loginportal/server-config.json | jq .bind | tr -d '"')
source "$ticketweb_venv_root/bin/activate"


if [[ "$devel_mode" -eq 1 ]]; then
    gunicorn --log-level debug --reload --bind $gunicorn_bind ticketweb_loginportal_server.app:main\(\)
else
    log_dir=$(cat $ticketweb_venv_root/etc/ticketweb/loginportal/server-config.json | jq .log_dir | tr -d '"')
    gunicorn --bind $gunicorn_bind \
             --access-logfile="$log_dir"/server-access.log \
             --error-logfile="$log_dir"/server-error.log \
             --pid /run/ticketweb/$venv_id/loginportal/server.pid \
             ticketweb_loginportal_server.app:main\(\)
fi


